# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# IoC
# For those controllers whose dependencies are being injected, we use the @controllers syntax here so that
# the router knows we are referring to a class (not an object). In turn it will call on the
# GlobalSettings.getControllerInstance method to resolve the actual controller instance. This method hooks into
# Guice to provide the actual instance complete with its injected dependencies

# Map static resources from the /public folder to the /assets URL path
GET         /assets/versioned/*file                                     controllers.Assets.versioned(path="/public", file: Asset)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                               controllers.Assets.at(path="/public", file)

######################
## DISPOSAL OF VEHICLE
######################

#page 1 - Before You Start (GET request not POST on submission because we are not posting any data)
GET         /                                                           @controllers.ApplicationRoot.index
GET         /sell-to-the-trade/before-you-start                         @controllers.BeforeYouStart.present
POST        /sell-to-the-trade/before-you-start                         @controllers.BeforeYouStart.submit

#page 2 - setup-trade-details
GET         /sell-to-the-trade/setup-trade-details                      @controllers.SetUpTradeDetails.present
POST        /sell-to-the-trade/setup-trade-details                      @controllers.SetUpTradeDetails.submit

#page 3 - business choose your address
GET         /sell-to-the-trade/business-choose-your-address             @controllers.BusinessChooseYourAddress.present
POST        /sell-to-the-trade/business-choose-your-address             @controllers.BusinessChooseYourAddress.submit

#page 4 [optional] - enter address manually
GET         /sell-to-the-trade/enter-address-manually                   @controllers.EnterAddressManually.present
POST        /sell-to-the-trade/enter-address-manually                   @controllers.EnterAddressManually.submit

GET         /sell-to-the-trade/vehicle-lookup                           @controllers.VehicleLookup.present
POST        /sell-to-the-trade/vehicle-lookup                           @controllers.VehicleLookup.submit
GET         /sell-to-the-trade/vehicle-lookup/exit                      @controllers.VehicleLookup.exit
GET         /sell-to-the-trade/vehicle-lookup-back                      @controllers.VehicleLookup.back

GET         /sell-to-the-trade/complete-and-confirm                     @controllers.Dispose.present
POST        /sell-to-the-trade/complete-and-confirm                     @controllers.Dispose.submit

GET         /sell-to-the-trade/sell-to-the-trade-success                @controllers.DisposeSuccess.present
POST        /sell-to-the-trade/sell-to-the-trade-success/new-disposal   @controllers.DisposeSuccess.newDisposal
POST        /sell-to-the-trade/sell-to-the-trade-success/exit           @controllers.DisposeSuccess.exit

GET         /sell-to-the-trade/sell-to-the-trade-failure                @controllers.DisposeFailure.present

GET         /sell-to-the-trade/vehicle-lookup-failure                   @controllers.VehicleLookupFailure.present
POST        /sell-to-the-trade/vehicle-lookup-failure                   @controllers.VehicleLookupFailure.submit

GET         /sell-to-the-trade/uprn-not-found                           @controllers.UprnNotFound.present

GET         /sell-to-the-trade/duplicate-sell-to-the-trade-error        @controllers.DuplicateDisposalError.present

GET         /sell-to-the-trade/service-error                            @controllers.MicroServiceError.present
GET         /sell-to-the-trade/service-error/try-again                  @controllers.MicroServiceError.back

GET         /sell-to-the-trade/vrm-locked                               @controllers.VrmLocked.present
POST        /sell-to-the-trade/vrm-locked/new-disposal                  @controllers.VrmLocked.newDisposal
POST        /sell-to-the-trade/vrm-locked/exit                          @controllers.VrmLocked.exit

GET         /sell-to-the-trade/error/:exceptionDigest                   @controllers.Error.present(exceptionDigest)
POST        /sell-to-the-trade/error/:exceptionDigest                   @controllers.Error.submit(exceptionDigest)

GET         /sell-to-the-trade/help                                     @controllers.Help.present
GET         /sell-to-the-trade/help/back                                @controllers.Help.back

GET         /with-language/:chosenLanguage                              controllers.AlternateLanguages.withLanguage(chosenLanguage: String)

GET         /healthcheck                                                @uk.gov.dvla.vehicles.presentation.common.controllers.HealthCheck.respond
